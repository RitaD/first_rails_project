<h5>
  <%= comment.commenter.capitalize %> scrive:
</h5>

<p>
  <%= comment.body %>
</p>

<p>
  <%= link_to 'Destroy Comment', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>

<%= render partial: 'comments/comment', collection: comment.comments %>

<h4>Reply :</h4>
<%= form_for([@article, comment, comment.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>